<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">
    <ImageButton
        android:id="@+id/btn_backToProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:backgroundTint="@android:color/transparent"/>

    <TextView
        android:id="@+id/header_editProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_backToProfile"
        android:paddingHorizontal="16dp"
        android:paddingVertical="5sp"
        android:text="Edit Profile"
        android:textColor="@color/black"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/btn_editImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view_profile"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_baseline_edit_24"
        android:text="input gambar" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_profile"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_below="@id/header_editProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_launcher_background" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_editImage"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="2dp"
        android:text="Name" />
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="2dp"
        android:hint="Insert your name here"/>
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_name"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="2dp"
        android:text="Email"/>
    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_email"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="2dp"
        android:inputType="textEmailAddress"
        android:hint="Insert your email here"/>
    <TextView
        android:id="@+id/tv_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_email"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="2dp"
        android:text="Phone number"/>
    <EditText
        android:id="@+id/et_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_phoneNumber"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="2dp"
        android:hint="Insert your phone number here"
        android:inputType="phone"/>

    <Button
        android:id="@+id/btn_submitProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_phoneNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="@android:color/darker_gray"
        android:drawableRight="@drawable/ic_baseline_system_update_24"
        android:text="SUBMIT" />
</RelativeLayout>

